<resources>
  <!-- main style for app - removes toolbar and adds app's colors -->
  <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorAccent">@color/app_primary</item>
    <item name="colorControlNormal">@color/app_primary</item>
    <item name="colorControlActivated">@color/app_primary</item>
    <item name="android:windowTranslucentStatus">true</item>
  </style>
  
  <!-- style for toolbar text and icons -->
  <style name="AppTheme.ActionBar.TitleTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:textColorPrimary">@color/text_black</item>
    <item name="android:textColor">@color/text_black</item>
    <item name="actionMenuTextColor">@color/text_black</item>
    <item name="android:textColorSecondary">@color/text_black</item>
  </style>

  <!-- theme for the splash screen -->
  <style name="AppTheme.Splash" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/splash</item>
  </style>
</resources>