<resources>
  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimaryDark">?attr/windowForegroundColor</item>
  </style>

  <style name="AppTheme.Light" parent="AppTheme.Base">
    <item name="windowForegroundColor">@android:color/white</item>
    <item name="textColorTitle">@android:color/black</item>
    <item name="actionBarColor">@android:color/white</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>

  <style name="AppTheme.Dark" parent="AppTheme.Base">
    <item name="windowForegroundColor">@android:color/black</item>
    <item name="textColorTitle">@android:color/white</item>
    <item name="actionBarColor">@android:color/black</item>
    <item name="android:windowLightStatusBar">false</item>
  </style>

  <style name="AppTheme.ActionBar.TitleTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:textColorPrimary">?attr/textColorTitle</item>
    <item name="android:textColor">?attr/textColorTitle</item>
    <item name="actionMenuTextColor">?attr/textColorTitle</item>
    <item name="android:textColorSecondary">?attr/textColorTitle</item>
  </style>

  <style name="AppTheme.Widgets.ActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:theme">@style/Theme.AppCompat.Light.NoActionBar</item>
    <item name="android:background">?attr/actionBarColor</item>
    <item name="android:stateListAnimator">@drawable/an_toolbar_elevation</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?attr/actionBarSize</item>
  </style>
</resources>